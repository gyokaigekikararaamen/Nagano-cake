<div class="container">
  <div class ="row mt-5">
    <p class="col-md-3 bg-light text-center"><strong>ショッピングカート</strong></p>
      <%= link_to "カートを空にする", destroy_cart_products_path, class: "btn btn-danger ml-auto" %>
  </div>

  <div class="row">
    <table class="table table-bordered mt-3">
      <thead>
        <tr class="bg-light">
          <th colspan="3">商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_products.each do |cart_product| %>
          <tr>
            <td colspan="3"><%= cart_product.product.name %></td>
            <td></td>
            <td></td>
            <td><%= cart_product.product.price * 1.1 %></td>
            <td>
              <% form_with model: @cart_product, method: :patch, local: true do |f| %>
                <%= f.select :amount, [["1", "1"], ["２", "2"], ["２", "2"], ["3", "3"], ["4", "4"], ["5", "5"]]%>
                <%= f.submit "変更", class: "btn btn-success" %>
              <% end %>
            </td>
            <td><%= cart_product.product.price * 1.1 * cart_product.product.amount %></td>
            <td><%= link_to "削除する", cart_products_path(cart_product), method: :delete, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
    <div>
      <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
    </div>
    <div class="colmd-3 ml-auto">
      <table class="table ml-auto">
        <tr>
          <td class="bg-light">合計金額</td>
          <td><%= %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row mt-3">
    <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success mx-auto" %>
  </div>
</div>