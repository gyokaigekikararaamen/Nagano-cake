<div class="container">
  
  <div class="row pt-5">
      <h4 class="col-md-5"><strong>ショッピングカート</strong></h4>
      <%= link_to "カートを空にする", destroy_cart_products_path, method: :delete, class: "btn btn-danger ml-auto" %>
  </div>
  
  <div>
    <table class="table table-bordered mt-3">
      <thead>
        <tr class="bg-light">
          <th colspan="3">商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_products.each do |cart_product| %>
          <tr>
            <td colspan="3"><%= cart_product.product.name %></td>
            <td><%= cart_product.product.add_tax_price.to_s(:delimited) %>円</td>
            <td>
              <div class="text-center">
                <%= form_with model: @cart_product, url: cart_product_path(cart_product.id), method: :patch, local: true do |f| %>
                  <%= f.number_field :amount, value: cart_product.amount, max: 5, min: 1 %>
                  <%= f.submit "変更", class: "btn btn-success btn-sm ml-3" %>
                <% end %>
              </div>
            </td>
            <td><%= (cart_product.product.add_tax_price * cart_product.amount).to_s(:delimited) %>円</td>
            <td>
              <div class="text-center">
                <%= link_to "削除する", cart_product_path(cart_product.id), method: :delete, class: "btn btn-danger btn-sm" %>
              </div>
              </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="row">
    <div>
      <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
    </div>

    <div class="colmd-4 ml-auto">
      <table class="table table-bordered ml-auto">
        <tr>
          <th class="bg-light px-5">合計金額</th>

          <td class="px-5"><%= @total_price.round.to_s(:delimited) %>円</td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row mt-3">
    <% if @cart_products.present? %>
      <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success mx-auto" %>
    <% end %>
  </div>
</div>