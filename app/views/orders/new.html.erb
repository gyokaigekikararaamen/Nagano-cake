<h2>注文情報入力</h2>
<%= form_with(url: orders_path, method: :post) do |f| %>
  <h3>支払方法</h3>
  <div class="radio-inline">
    <%= f.radio_button :payment_method, 0, checked: "checked" %>
	  <%= f.label :クレジットカード %>
  </div>

  <div class="radio-inline">
    <%= f.radio_button :payment_method, 1 %>
	  <%= f.label :銀行振込 %>
  </div>

  <h3>お届け先</h3>
  <div class="radio-inline">
    <%= radio_button_tag("address", "0") %>
    <%= label_tag("address_0", "ご自身の住所") %>
    <%= f.radio_button :address, 0, checked: "checked" %>
		<%= f.label :ご自身の住所 %>
  </div>
  <div>〒<%= current_customer.postal_code %>
    <%= current_customer.address %></br>
    <%= current_customer.first_name %>
    <%= current_customer.last_name %>
  </div>

  <div class="radio-inline">
    <%= radio_button_tag("address", "1") %>
    <%= label_tag("address_1", "登録済住所から選択") %>
  </div>
  <%= collection_select :@order ,:address_id, current_customer.addresses, :id, :address,:include_blank => "選択してください" %>

  <div class="radio-inline">
    <%= radio_button_tag("address", "2") %>
    <%= label_tag("address_2", "新しいお届け先") %>
  </div>

  <%= form_with model: @order, local:true do |f| %>
  <%= label :postal_code, "郵便番号" %>
  <%= f.text_field :postal_code %>

  <%= f.label :address, "住所" %>
  <%= f.text_field :address %>

  <%= f.label :name, "宛名" %>
  <%= f.text_field :name %>

  <% end %>

 <%= submit_tag("確認画面へ進む") %>

<% end %>