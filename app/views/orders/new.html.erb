<div class="container">
  <h2 class="my-5">注文情報入力</h2>
  <%= form_with( url: orders_path, method: :post) do |f| %>
    <div class="my-3">
      <h4 >支払方法</h4>
      <div class="radio-inline">
        <%= f.radio_button :payment_method, 0, checked: "checked" %>
    	  <%= f.label :クレジットカード %>
      </div>
      <div class="radio-inline">
        <%= f.radio_button :payment_method, 1 %>
    	  <%= f.label :銀行振込 %>
      </div>
    </div>

    <h4>お届け先</h4>
    <div class="radio-inline">
      <%= f.radio_button :address_order, 0, checked: "checked" %>
  		<%= f.label :ご自身の住所 %>
    </div>
    <div>　〒<%= current_customer.postal_code %>　<%= current_customer.address %></br>
      　　<%= current_customer.last_name %><%= current_customer.first_name %>
    </div>

    <div class="radio-inline">
      <%= f.radio_button :address_order, 1 %>
  		<%= f.label :登録済住所から選択 %>
    </div>
    　<%= f.collection_select :chosed_address,current_customer.addresses, :id, :combine_address %>

    <div class="radio-inline">
      <%= f.radio_button :address_order, 2 %>
  		<%= f.label :新しいお届け先 %>
    </div>

    <div class="form-group">
      <div class="row">
        　<div class="col-sm-3"><%= f.label :postal_code,"郵便番号(ハイフンなし)" %></div>
        <div class="col-sm-3"><%= f.text_field :postal_code, autocomplete: "postal_code",class:"form-control" %></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        　<div class="col-sm-3"><%= f.label :address,"住所" %></div>
        <div class="col-sm-8"><%= f.text_field :address, autocomplete: "address",class:"form-control" %></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        　<div class="col-sm-3"><%= f.label :name,"宛名" %></div>
        <div class="col-sm-3"><%= f.text_field :name, autocomplete: "name",class:"form-control" %></div>
      </div>
    </div>

    <%= f.submit "確認画面へ進む",class: "btn btn-outline-secondary mr-3" %>
  <% end %>
</div>
