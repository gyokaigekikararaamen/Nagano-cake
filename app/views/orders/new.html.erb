<h2>注文情報入力</h2>
<%= form_with(model: @order, local: true) do |f| %>
  <h3>支払方法</h3>
  <div class="radio-inline">
    <%= f.radio_button :payment_method, :クレジットカード %>
    <%= f.label :クレジットカード, class: "payment_method_label" %>
  </div>
  <div class="radio-inline">
    <%= f.radio_button :payment_method, :銀行振込 %>
    <%= f.label :銀行振込, class: "payment_method_label" %>
  </div>

  <h3>お届け先</h3>
  <div class="radio-inline">
    <%= f.radio_button :postal_code :address :name :ご自身の住所 %>
    <%= f.label :ご自身の住所, class: "payment_method_label" %>
    <div>〒<%= current_customer.postal_code %>
    <%= current_customer.address %></br>
    <%= current_customer.first_name %>
    <%= current_customer.last_name %></div>
  </div>

  <div class="radio-inline">
    <%= f.radio_button :payment_method, :登録済住所から選択 %>
    <%= f.label :登録済住所から選択, class: "payment_method_label" %>
  </div>

  <div class="radio-inline">
    <%= f.radio_button :payment_method, :新しいお届け先 %>
    <%= f.label :新しいお届け先, class: "payment_method_label" %>
  </div>

<% end %>