<h2>注文情報入力</h2>
<%= form_with(url: orders_path, method: :post) do |f| %>
  <h3>支払方法</h3>
  <div class="radio-inline">
    <%= f.radio_button :payment_method, 0, checked: "checked" %>
	  <%= f.label :クレジットカード %>
  </div>

  <div class="radio-inline">
    <%= f.radio_button :payment_method, 1 %>
	  <%= f.label :銀行振込 %>
  </div>

  <h3>お届け先</h3>
  <div class="radio-inline">
    <%= f.radio_button :address, 0, checked: "checked" %>
		<%= f.label :ご自身の住所 %>
  </div>
  <div>〒<%= current_customer.postal_code %>
    <%= current_customer.address %></br>
    <%= current_customer.first_name %>
    <%= current_customer.last_name %>
  </div>

  <div class="radio-inline">
    <%= f.radio_button :address, 1 %>
		<%= f.label :登録済住所から選択 %>
  </div>

  <%= f.collection_select :chosed_address,current_customer.addresses, :id, :combine_address,:include_blank => "選択してください" %>

  <div class="radio-inline">
    <%= f.radio_button :address, 2 %>
		<%= f.label :新しいお届け先 %>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-3"><%= f.label :postal_code,"郵便番号(ハイフンなし)" %></div>
      <div class="col-sm-3"><%= f.text_field :postal_code, autocomplete: "postal_code",class:"form-control" %></div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-3"><%= f.label :address,"住所" %></div>
      <div class="col-sm-9"><%= f.text_field :address, autocomplete: "address",class:"form-control" %></div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-3"><%= f.label :name,"宛名" %></div>
      <div class="col-sm-3"><%= f.text_field :name, autocomplete: "name",class:"form-control" %></div>
    </div>
  </div>

  <%= f.submit "確認画面へ進む",class: "btn btn-outline-secondary mr-3" %>
<% end %>

