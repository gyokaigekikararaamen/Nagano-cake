<div class="container">
  <h2>注文履歴</h2>
  <table class="table table-bordered table-layout:fixed width:100%">
      <thead>
        <tr>
          <td style="width: 10%">注文日</td>
          <td style="width: 40%">配送先</td>
          <td style="width: 20%">注文商品</td>
          <td style="width: 10%">支払金額</td>
          <td style="width: 10%">ステータス</td>
          <td style="width: 10%">注文詳細</td>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |orders| %>
          <tr>
            <td ><%= orders.created_at %></td>
            <td ><%= orders.address %></td>
            <td ><%= orders.product %></td>
            <td ><%= orders.billing_amount %></td>
            <td ><%= orders.order_status %></td>
            <td>
              <%= link_to "表示する", order_path(orders.id),class: "btn btn-outline-secondary mr-3" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>