<div class="container">
  <div class="row">
    <div class="col-md-6 mt-4">
      <h5>ジャンル編集</h5>
      <%= form_with model:@genre, url: admin_genre_path, local:true do |f| %>
      <table>
        <tbody>
          <tr>
            <th>ジャンル名</th>
            <th><%= f.text_field :name, class:"form-control" %></th>
            <th><%= f.submit "変更を保存", class:"btn btn-success" %></th>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>