<div class="container">
  <div class="row">
    <div class="col-md-8 mt-4">
        <div class="col-md-4 bg-light text-center">
          <h5>ジャンル一覧・追加</h5>
        </div>
       <div class="form-group mt-5">
          <%= form_with model:@genre, url:'/admin/genres', local:true do |f| %>
          <%= render 'layouts/error_messages', model: f.object %>
          <table>
            <tbody>
              <tr>
                <th>
                  <div class="mr-5">ジャンル名</div>
                  </th>
                <th>
                  <div class="mr-5"><%= f.text_field :name, class:"form-control"%></div>
                </th>
                <th><%= f.submit '新規登録', class:"btn btn-success" %></th>
              </tr>
            </tbody>
          </table>
       </div>
      <% end %>
    </div>

    <div class="col-md-6 mt-5">
        <table class="table">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th></th>
            </tr>
          </thead>
          <% @genres.each do |genre| %>
          <tbody>
            <tr>
              <td><%= genre.name %></td>
              <td class="text-center"><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success" %></td>
            </tr>
          </tbody>
          <% end %>
        </table>

    </div>
  </div>
</div>