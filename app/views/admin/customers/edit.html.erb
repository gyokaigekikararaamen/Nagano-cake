<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="col-md-3">
        <div class="customers-tag mt-4 bg-light text-center">
            <h5>会員一覧</h5>
        </div>
      </div>
        <%= form_with model:@customer, url:"/admin/customers/#{@customer.id}", local:true do |f| %>
      <table class="table mt-4 table-borderless">
        <thead>
        </thead>

        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id%></td>
          </tr>

          <tr>
            <td>氏名</td>
            <td><%= f.text_field :first_name, class:"form-control" %></td>
            <td><%= f.text_field :last_name, class:"form-control" %></td>
          </tr>

          <tr>
            <td>フリガナ</td>
            <td><%= f.text_field :kana_first_name, class:"form-control" %></td>
            <td><%= f.text_field :kana_last_name, class:"form-control" %></td>
          </tr>

          <tr>
            <td>郵便番号</td>
            <td><%= f.text_field :postal_code, class:"form-control" %></td>
          </tr>

          <tr>
            <td>住所</td>
            <td><%= f.text_field :address, class:"form-control" %></td>
          </tr>

          <tr>
            <td>電話番号</td>
            <td><%= f.text_field :phone_number, class:"form-control" %></td>
          </tr>

          <tr>
            <td>メールアドレス</td>
            <td><%= f.text_field :email, class:"form-control" %></td>
          </tr>

          <tr>
            <td>会員ステータス</td>
            <td>
              <% if @customer.is_deleted != false %>
                <%= link_to '有効', admin_customer_hide_path(@customer, post: {is_deleted: false}), method: :put, class: "btn btn-success" %>
              <% else %>
                <%= link_to '退会', admin_customer_hide_path(@customer, post: {is_deleted: true}), method: :put, class: "btn btn-danger" %>
              <% end %>

            </td>
          </tr>
        </tbody>

      </table>
          <%= f.submit "変更を保存", class:"btn btn-success ml-5" %>
        <% end %>
    </div>
  </div>
</div>