<div class='container'>
 <h2>商品一覧</h2>
   
    <table class="table table-striped">
     <%= link_to "新規登録",   new_admin_product_path, class: "btn btn-success" %>
     <thead>
      <tr>
       <th>商品ID</th>
       <th>商品名</th>
       <th>税抜価格</th>
       <th>ジャンル</th>
       <th>ステータス</th>
      </tr>
     </thead>
     <tbody>
      <% @products.each do |product| %>
      <tr>
        <td><%= product.id%></td>
        <td>
         <%= link_to admin_product_path(product.id) do %>
          <%= product.name%>
         <% end %> 
        </td>
        <td><%= product.price %></td>
        <td><%= product.genre.name%></td>
        <td><%= product.product_status %></td>
       </tr>
       <% end %>
      </tbody>
     </table>
     <%= paginate @products %>
  

</div>