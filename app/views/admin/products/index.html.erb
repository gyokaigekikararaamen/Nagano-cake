<div class="container">
  <div class ="row mt-5">
    <p class="title col-md-3  text-center"><strong>商品一覧</strong></p>
    <%= link_to "新規登録",   new_admin_product_path, class: "btn btn-outline-secondary ml-auto" %>
    <table class="table border-bottom  mt-3">
    
     <thead>
      <tr class="table-top">
       <th>商品ID</th>
       <th>商品名</th>
       <th>税抜価格</th>
       <th>ジャンル</th>
       <th>ステータス</th>
      </tr>
     </thead>
     <tbody>
      <% @products.each do |product| %>
      <tr>
        <td><%= product.id%></td>
        <td>
         <%= link_to admin_product_path(product.id) do %>
          <%= product.name %>
         <% end %> 
        </td>
        <td><%= product.price %></td>
        <td><%= product.genre.name %></td>
        <%if product.product_status =="販売中"%>
        <td class="text-success font-weight-bold"><%= product.product_status %></td>
        <% else %>
        <td><%= product.product_status %></td>
        <% end %>
       </tr>
       <% end %>
      </tbody>
     </table>
     <%= paginate @products %>
  

</div>