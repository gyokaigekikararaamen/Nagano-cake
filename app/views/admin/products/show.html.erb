<div class='container'>
 <div class='row'>
  <h2>商品新規登録</h2>
   <div class="col-md-3">
    <%= attachment_image_tag(@prodact, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %> 
   </div> 
   <div class="col-md-8">    
    　<table border="0">
       <tr>
        <td>商品名</td>
        <td><%= @prodact.name %></td>
       </tr> 
       <tr>
        <td>商品説明</td>
        <td><%= @prodact.description %></td>
       </tr> 
       <tr>
        <td>ジャンル</td>
        <td><%= @prodact.genre_id %></td>
       </tr>
       <tr>
        <td>税込価格</td>
        <td><%= @prodact.name %></td>
       </tr>
       <tr>
        <td>販売ステータス</td>
        <td><%= @prodact.product_status.add_tax_price.to_s(:dalimited) %>（<%= @prodact.price %>）円</td>
       </tr>
      </table> 
     <%=link_to "編集する",  edit_admin_product_path(@prodact.id) %> 
  </div>   
 </div>    
</div>     
     