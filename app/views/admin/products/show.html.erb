<div class='container'>
 <h4> 商品詳細</h4>
 <div class='row'>
  
   <div class='col-md-4'>
    <p> <%= attachment_image_tag @product, :image,  format: 'image', size: "350x200" %></p>
   </div> 
   <div class="col-md-8">    
     <table border="0">
       <tr>
        <td>商品名</td>
        <td><%= @product.name %></td>
       </tr> 
       <tr>
        <td>商品説明</td>
        <td><%= @product.description %></td>
       </tr> 
       <tr>
        <td>ジャンル</td>
        <td><%= @product.genre.name%></td>
       </tr>
       <tr>
        <td>税込価格</td>
        <td><%= @product.add_tax_price.to_s(:dalimited) %>（<%= @product.price %>）円</td>
       </tr>
       <tr>
        <td>販売ステータス</td>
        <td><%= @product.product_status %></td>
       </tr>
      </table> 
     <%=link_to "編集する",  edit_admin_product_path(@product.id),class:"btn btn-success"%> 
  </div>   
 </div>    
</div>     
     