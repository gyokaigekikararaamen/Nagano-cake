<div class='container'>
 <h4>商品新規登録</h4>
 <div class='row'>
 
   <div class="col-sm-12 col-md-10 col-lg-5 px-5 px-sm-0 mx-auto">
   
    <%= form_with model: [ :admin, @prodacts ], local:true do |f| %> 
     <table border="0">
       <tr>
        <th> <%= f.label "商品画像"%></th>
        <td> <%= f.attachment_field :image %></td>
       </tr>
       <tr>
        <th> <%= f.label "商品名" %></th>
        <td> <%= f.text_field :name %></td>
       </tr>
       <tr>
        <th> <%= f.label "商品説明" %></th>
        <td> <%= f.text_area :introduction%></td>
       </tr>
      
       <tr>
        <th> <%= f.label "税抜価格"%></th>
        <td><%= f.number_field :price %></td>
       </tr>
       <tr>
        <th> <%= f.label "販売ステータス" %></th>
        <td><%= f.radio_button :product_status, true %><%= f.label :product_status, '販売中', value: true %> 
        <%= f.radio_button :product_status, false %><%= f.label :product_status, '販売停止中', value: false %>
        </td>
       </tr>
      </table>
      <p> <%= f.submit "新規登録" , class: 'btn btn-success' %></p>
    <% end %> 
   </div>
  </div>
 </div> 