<div class='container'>
  <h4 ><span class="bg-light">商品新規登録<span></h4>
 <div class='row'>

   <div class="col-sm-12 col-md-10 col-lg-5 px-5 px-sm-0 mx-auto">

    <%= form_with model: @product,url: admin_products_path, local:true do |f| %>
     <table border="0">
       <tr>
        <th> <%= f.label "商品画像"%></th>
        <td> <%= f.attachment_field :image %></td>
       </tr>
       <tr>
        <th> <%= f.label "商品名" %></th>
        <td> <%= f.text_field :name, size: 30 %></td>
       </tr>
       <tr>
        <th> <%= f.label "商品説明" %></th>
        <td> <%= f.text_area :description, size: "30x5"%></td>
       </tr>
       <tr>
        <th> <%= f.label "ジャンル" %></th>
        <td> <%= f.collection_select(:genre_id, Genre.all, :id, :name, {prompt: "--選択してください--"})  %></td>
       </tr>
       <tr>
        <th> <%= f.label "税抜価格"%></th>
        <td><%= f.number_field :price %>円</td>
       </tr>
       <tr>
        <th> <%= f.label "販売ステータス" %></th>
        <td>
        　<%= f.radio_button :product_status, 0, checked: "checked" %>
	  		     <%= f.label :販売中 %>
        　<%= f.radio_button :product_status, 1 %>
	  		     <%= f.label :販売停止 %>
        </td>
       </tr>
      </table>
       <%= f.submit "新規登録" , class: 'btn btn-success' %>
    <% end %>

   </div>
  </div>
 </div>