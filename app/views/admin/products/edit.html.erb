<div class='container'>
  <h4 ><span class="bg-light">商品編集<span></h4>
 <div class='row'>

   <div class="col-sm-12 col-md-10 col-lg-5 px-5 px-sm-0 mx-auto">

    <%= form_with model: @product, url: admin_product_path(@product.id), local:true do |f| %>
     <table border="0">
       <tr>
        <th> <%= f.label "商品画像"%></th>
        <td> <%= f.attachment_field :image %></td>
       </tr>
       <tr>
        <th> <%= f.label "商品名" %></th>
        <td> <%= f.text_field :name %></td>
       </tr>
       <tr>
        <th> <%= f.label "商品説明" %></th>
        <td> <%= f.text_area :description %></td>
       </tr>
       <tr>
        <th> <%= f.label "ジャンル" %></th>
        <td> <%= f.collection_select(:genre_id, Genre.all, :id, :name, {prompt: "-----"}) %></td>
       </tr>
       <tr>
        <th> <%= f.label "税抜価格"%></th>
        <td><%= f.number_field :price %>円</td>
       </tr>
       <tr>
        <th> <%= f.label "販売ステータス" %></th>
        <td>
       <%= f.radio_button :product_status, 0 %>販売中
       <%= f.radio_button :product_status, 1 %>販売停止
       </tr>
      </table>
     <%= f.submit "変更を保存する" , class: 'btn btn-success' %>
    <% end %>
   </div>
  </div>
 </div>