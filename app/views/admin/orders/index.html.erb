<div class="container">
  <div class ="row mt-5">
    <p class="col-md-3 bg-light text-center"><strong>注文履歴一覧</strong></p>
    <%= link_to "新規登録",   new_admin_product_path, class: "btn btn-success ml-auto" %>
    <table class="table border mt-3">
    
     <thead>
      <tr class="bg-light">
       <th>購入日時</th>
       <th>購入者</th>
       <th>注文個数</th>
       <th>注文ステータス</th>
     </thead>
     <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td><%= oerder.created_at%></td>
        <td><%= order.customer.name%></td>
        <td><%= oerder.created_at.count %></td>
        <td><%= order.order_status%></td>
       </tr>
       <% end %>
      </tbody>
     </table>
     <%= paginate  @orders %>
  

</div>