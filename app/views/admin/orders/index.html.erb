<div class="container">
  <div class ="row mt-5">
    <p class="col-md-3 bg-light text-center"><strong>注文履歴一覧</strong></p>
    <%= link_to "新規登録",   new_admin_product_path, class: "btn btn-success ml-auto" %>

    <table class="table border mt-3">
      <thead>
        <tr class="bg-light">
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%Y%m%d') %></td>
          <td><%= order.customer.last_name%><%= order.customer.first_name%></td>
          <td>
            <% order.ordered_products.each do |ordered_product| %>
              <%= ordered_product.amount %>
            <% end %>
            </td>
          <td><%= order.order_status %></td>
        </tr>
        <% end %>
      </tbody>
     </table>
     <%= paginate @orders %>
  </div>
</div>