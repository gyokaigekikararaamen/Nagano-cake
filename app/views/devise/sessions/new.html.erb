<div class="container">
  <div class="row">
   <h4 class="my-5 bg-secondary text-white rounded-pill p-2">ログイン</h4>
  </div>

  <%= form_with model: @customer, url: customer_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-2"><%= f.label :email,"メールアドレス" %></div>
        <div class="col-sm-6"><%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-2"><%= f.label :password,"パスワード" %></div>
        <div class="col-sm-6"><%= f.password_field :password, autocomplete: "current-password",class:"form-control" %></div>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "ログイン",class: "btn btn-outline-secondary mr-3" %>

    </div>
  <% end %>

  <div>
    <h5 class="mt-5">会員登録がお済でない方はこちらから新規登録を行ってください。</h5>
    <%= link_to "新規登録", new_customer_registration_path, class: "btn btn-outline-secondary ml-2" %>
  </div>

</div>
