<div class="container">
  <h2 class="my-5">新規会員登録</h2>

    <%= form_with model: @customer, url: customer_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group">
          <div class="row">
            <div class="col-sm-2"><%= f.label :name,"名前" %></div>
            <div class="col-sm-1"><%= f.label :first_name,"(姓)" %></div>
            <div class="col-sm-3"><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",class:"form-control" %></div>
            <div class="col-sm-1"><%= f.label :last_name,"(名)" %></div>
            <div class="col-sm-3"><%= f.text_field :last_name, autocomplete: "last_name",class:"form-control" %></div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-sm-2"><%= f.label :kana_name,"フリガナ" %></div>
            <div class="col-sm-1"><%= f.label :kana_first_name,"(セイ)" %></div>
            <div class="col-sm-3"><%= f.text_field :kana_first_name, autocomplete: "kana_first_name",class:"form-control" %></div>
            <div class="col-sm-1"><%= f.label :kana_last_name,"(メイ)" %></div>
            <div class="col-sm-3"><%= f.text_field :kana_last_name, autocomplete: "kana_last_name",class:"form-control" %></div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-sm-3"><%= f.label :email,"メールアドレス" %></div>
            <div class="col-sm-3"><%= f.email_field :email, autocomplete: "email",class:"form-control" %></div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-sm-3"><%= f.label :postal_code,"郵便番号(ハイフンなし)" %></div>
            <div class="col-sm-3"><%= f.text_field :postal_code, autocomplete: "postal_code",class:"form-control" %></div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-sm-3"><%= f.label :address,"住所" %></div>
            <div class="col-sm-9"><%= f.text_field :address, autocomplete: "address",class:"form-control" %></div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-sm-3"><%= f.label :phone_number,"電話番号(ハイフンなし)" %></div>
            <div class="col-sm-3"><%= f.text_field :phone_number, autocomplete: "phone_number",class:"form-control" %></div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-sm-3">
              <%= f.label :password,"パスワード" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %>文字以上)</em>
              <% end %>
            </div>
          <div class="col-sm-3"><%= f.password_field :password, autocomplete: "new-password",class:"form-control" %></div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-sm-3"><%= f.label :password_confirmation,"パスワード(確認用)" %></div>
            <div class="col-sm-3"><%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control" %></div>
          </div>
        </div>
      </form>

      <div class="actions">
        <%= f.submit "新規登録",class: "btn btn-outline-secondary mr-3" %>
      </div>
    <% end %>
  <h2 class="my-5">既に登録済みの方</h2>
  <p><%= link_to "こちら", new_customer_session_path %> からログインしてください。</p>
