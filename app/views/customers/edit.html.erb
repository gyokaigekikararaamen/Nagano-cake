<div class="container">
  <div class="row">
   <h4 class="my-5 text-center bg-secondary text-white rounded-pill p-2">会員情報修正</h4>
  </div>
  <%= form_with model: @customer, local:true do |f| %>
  　<div class="form-group">
      <div class="row">
        <div class="col-sm-2"><%= f.label :name,"名前" %></div>
        <div class="col-sm-1"><%= f.label :last_name,"(姓)" %></div>
        <div class="col-sm-3"><%= f.text_field :last_name, autocomplete: "last_name",class:"form-control" %></div>
        <div class="col-sm-1"><%= f.label :first_name,"(名)" %></div>
        <div class="col-sm-3"><%= f.text_field :first_name, autocomplete: "first_name",class:"form-control" %></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-2"><%= f.label :kana_name,"フリガナ" %></div>
        <div class="col-sm-1"><%= f.label :kana_last_name,"(セイ)" %></div>
        <div class="col-sm-3"><%= f.text_field :kana_last_name, autocomplete: "kana_last_name",class:"form-control" %></div>
        <div class="col-sm-1"><%= f.label :kana_first_name,"(メイ)" %></div>
        <div class="col-sm-3"><%= f.text_field :kana_first_name, autocomplete: "kana_first_name",class:"form-control" %></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-3"><%= f.label :email,"メールアドレス" %></div>
        <div class="col-sm-3"><%= f.email_field :email, autocomplete: "email",class:"form-control" %></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-3"><%= f.label :postal_code,"郵便番号(ハイフンなし)" %></div>
        <div class="col-sm-3"><%= f.text_field :postal_code, autocomplete: "postal_code",class:"form-control" %></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-3"><%= f.label :address,"住所" %></div>
        <div class="col-sm-9"><%= f.text_field :address, autocomplete: "address",class:"form-control" %></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-3"><%= f.label :phone_number,"電話番号(ハイフンなし)" %></div>
        <div class="col-sm-3"><%= f.text_field :phone_number, autocomplete: "phone_number",class:"form-control" %></div>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "編集内容を保存",class: "btn btn-outline-secondary mr-3" %>
    </div>

  <% end %>

  <%= link_to "退会する", customer_unsubscribe_path,class: "btn btn-outline-danger mr-3 my-5" %>
</div>