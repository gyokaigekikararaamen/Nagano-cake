
<div class="container">
  <div class="row">
    <div class="mt-3 bg-secondary text-white rounded-pill p-2 text-center">
      <h4 class="d-md-inline">検索結果</h4>
      <p class="d-md-inline">( 全<%= @products.count %>件 )</p>
    </div>
  </div>
  <!--商品表示部分-->
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-7 col-md-3 mt-4">
        <%= link_to product_path(product.id), class: "card shadow-sm h-100 text-dark text-decoration-none" do %>
          <%= attachment_image_tag product, :image, class: "card-img-top img-fluid" %>
          <p class="card-body"><%= product.name %></p>
          <p class="card-footer m-0">¥<%= product.price.to_s(:delimited) %></p>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-center mt-3">
      <%= paginate @products %>
  </div>
</div>