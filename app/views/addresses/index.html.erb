<div class="container">
  <div class="row">
    <h4 class="my-5 text-center bg-secondary text-white rounded-pill p-2">配送先登録 / 一覧</h4>
  </div>
  <%= form_with model: @address, data: {remote: true} do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-3"><%= f.label :postal_code,"郵便番号(ハイフンなし)" %></div>
        <div class="col-sm-3"><%= f.text_field :postal_code, autocomplete: "postal_code",class:"form-control" %></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-3"><%= f.label :address,"住所" %></div>
        <div class="col-sm-9"><%= f.text_field :address, autocomplete: "address",class:"form-control" %></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-3"><%= f.label :name,"宛名" %></div>
        <div class="col-sm-3"><%= f.text_field :name, autocomplete: "name",class:"form-control" %></div>
      </div>
    </div>

    <%= f.submit "登録する",class: "btn btn-outline-secondary mb-3" %>
  <% end %>
<div id="address">
<%= render 'addresses/address', addresses: @addresses %>
</div>
</div>