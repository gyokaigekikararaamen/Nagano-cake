<div class="container">
  <h2 class="my-5">配送先登録/一覧</h2>
  <%= form_with model: @address, local:true do |f| %>
    <div class="form-group">
      <div class="row">
        <div class="col-sm-3"><%= f.label :postal_code,"郵便番号(ハイフンなし)" %></div>
        <div class="col-sm-3"><%= f.text_field :postal_code, autocomplete: "postal_code",class:"form-control" %></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-3"><%= f.label :address,"住所" %></div>
        <div class="col-sm-9"><%= f.text_field :address, autocomplete: "address",class:"form-control" %></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-3"><%= f.label :name,"宛名" %></div>
        <div class="col-sm-3"><%= f.text_field :name, autocomplete: "name",class:"form-control" %></div>
      </div>
    </div>

    <%= f.submit "登録する",class: "btn btn-outline-secondary mr-3" %>
  <% end %>

</div>